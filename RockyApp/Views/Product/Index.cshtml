@model IEnumerable<RockyApp.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список продуктов</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="UpSert" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Новый продукт</a>
        </div>
    </div>
    
    <br/><br/>
    
    @if (Model?.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thread>
                <th>
                    Наименование продуктв
                </th>
                <th>
                    Стоимость
                </th>
            </thread>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Price.ToString()</td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="UpSert" class="btn btn-primary mx-1"><i class="fa-regular fa-pen-to-square"></i></a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-1"><i class="fa-regular fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет продуктов!</p>
    }
</div>